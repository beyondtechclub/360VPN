<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardCornerRadius="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:padding="10dp"



        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/country_flag"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_india" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:layout_toStartOf="@+id/txt_default"
                android:layout_toEndOf="@+id/country_flag"
                android:layout_toRightOf="@+id/country_flag"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:text="@string/austrailia_country"
                android:textColor="@color/Grey"
                android:textSize="17sp"
                android:layout_toLeftOf="@+id/txt_default"
                tools:ignore="RtlCompat" />


            <TextView
                android:id="@+id/txt_default"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/arrow"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:text="Make Default"
                android:textColor="@color/Grey"
                android:layout_toLeftOf="@+id/arrow"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/btn_unlock"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toStartOf="@+id/arrow"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="0dp"
                android:text="Unlock"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:visibility="gone"
                android:background="@drawable/btn_unlock_bg"
                android:textColor="@android:color/white"
                android:layout_toLeftOf="@+id/arrow"
                android:layout_marginTop="-3dp"
                android:layout_marginBottom="-3dp"
                android:layout_marginRight="15dp" />

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_right_arrow"
                android:visibility="gone"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>







</RelativeLayout>